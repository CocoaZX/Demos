#import "McBaseViewController.h"
//加载进度
#import "NJKWebViewProgressView.h"
#import "NJKWebViewProgress.h"

#import <JavaScriptCore/JavaScriptCore.h>
@interface McBaseWebViewController : McBaseViewController
<UIWebViewDelegate,UIScrollViewDelegate,NJKWebViewProgressDelegate>

//加载进度
@property(nonatomic,strong)NJKWebViewProgressView *progressView;
@property(nonatomic,strong)NJKWebViewProgress *progressProxy;


@property(nonatomic,strong)UIWebView *webView;

//从h5网页获取Uid
@property(nonatomic,copy)NSString *webUserID;

//======请求支付弹窗
//用于显示金币打赏的window
@property(nonatomic,strong)UIWindow *payGoldCoinWindow;
//弹窗标题
@property(nonatomic,copy)NSString *webPayTitle;
//弹窗描述
@property(nonatomic,copy)NSString *webPayDesc;
//支付类型，金币或者现金：0金币，1现金
@property(nonatomic,copy)NSString *webPayType;
//金额
@property(nonatomic,copy)NSString *webPayAmount;
//支付对象类型:人，图片...
@property(nonatomic,copy)NSString *webPayTargetType;
//支付对象的ID
@property(nonatomic,copy)NSString *webPayTargetID;


//支付回参数
@property(nonatomic,copy)NSString *webPayCallBackFunc;
@property(nonatomic,copy)NSString *webPaycallBackData;


//避免重复登陆:是否正在执行登陆
@property(nonatomic,assign)BOOL isPerformLogIn;

- (void)communicateWithJS:(JSContext *)context withVC:(McBaseWebViewController *)vc;
//每个h5界面的导航栏右侧都显示分享按钮
- (void)setNavigationBarShareButtionItem;


@end
