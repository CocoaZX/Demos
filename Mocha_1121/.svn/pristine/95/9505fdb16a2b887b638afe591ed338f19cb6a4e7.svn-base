#import "DownLoadImgViewController.h"
#import "TXYDownloader.h"
#import "QCloudUtils.h"
@interface DownLoadImgViewController ()
{
    UIImageView *downlaodImg ;
    UIProgressView *progressView;
}
@property (nonatomic,strong) TXYDownloader *downloaderManager;
@end

@implementation DownLoadImgViewController



- (void)viewDidLoad {
    [super viewDidLoad];
    [self setUI];
    
    /***********************************下载图片看这里就够了 ***********************************
     1，初始化下载容器
     2，开始下载
     **********************************上传图片看这里就够了 ************************************/
      /*********1  初始化下载的容器 */
    self.downloaderManager = [[TXYDownloader alloc] initWithPersistenceId:@"imgDownload" type:TXYDownloadTypePhoto];
      /*********2  初始化下载的容器 */
    [self downloadPhoto];
}

- (void)downloadPhoto
{
    [_downloaderManager    download:self.imgString      /*******下在如果签名的的话 拼写在下载url 的后面 appendSignBehindURL*****/
                             target:self
                          succBlock:^(NSString *url, NSData *data, NSDictionary *info) {
                              UIImage *image = [UIImage imageWithData:data];
                              downlaodImg.image = image;
                              progressView.hidden = YES;
                          } failBlock:^(NSString *url, NSError *error) {
                              
                              NSLog(@"图片下载失败，code:%zd desc:%@", error.code, error.domain);
                              
                          } progressBlock:^(NSString *url, NSNumber *value) {
                              
                              progressView.hidden = NO;
                              progressView.progress =  [value floatValue];
                              
                          } param:nil];
}

#pragma mark - 添加 sign 方法

- (NSString *)appendSignBehindURL:(NSString *)url
{
    NSString *delimiter = @"?";
    if ([url rangeOfString:delimiter].location != NSNotFound) {
        delimiter = @"&";
    }
    NSString *resultURL;
    NSString *sign ;
    resultURL = [url stringByAppendingFormat:@"%@sign=%@",delimiter, sign];
    
    return resultURL;
}


/*****************************************ui 处理不必关心*****************************************/
#pragma mark - ui
-(void)setUI
{
    [self.view setBackgroundColor: [UIColor whiteColor]];
    downlaodImg  = [[UIImageView alloc] init];
    [self.view addSubview:downlaodImg];
    [self drawBorderWithButton:downlaodImg];
    [downlaodImg setTranslatesAutoresizingMaskIntoConstraints:NO];
    NSDictionary *views = NSDictionaryOfVariableBindings(self.view, downlaodImg);
    
    [self.view addConstraints:[NSLayoutConstraint constraintsWithVisualFormat:@"H:|-30-[downlaodImg(>=250)]-30-|" options:NSLayoutFormatAlignAllCenterX metrics:nil views:views]];
    [self.view addConstraints:[NSLayoutConstraint constraintsWithVisualFormat:@"V:|-150-[downlaodImg(==300)]" options:NSLayoutFormatAlignAllCenterY metrics:nil views:views]];
    progressView = [[UIProgressView alloc] initWithFrame:CGRectMake(100, kScreenHeight/2, kScreenWidth-200, 30)];
    [self.view addSubview:progressView];

}

- (void)drawBorderWithButton:(UIImageView *)button {
    CALayer * downButtonLayer = [button layer];
    [downButtonLayer setMasksToBounds:YES];
    [downButtonLayer setBorderWidth:1.0];
    [downButtonLayer setBorderColor:[[UIColor grayColor] CGColor]];
}

- (void)didReceiveMemoryWarning {
    [super didReceiveMemoryWarning];
    // Dispose of any resources that can be recreated.
}




